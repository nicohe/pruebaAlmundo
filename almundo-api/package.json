{
  "name": "almundo-api",
  "version": "1.0.0",
  "description": "Almundo REST API",
  "scripts": {
    "lint": "standard",
    "test": "npm run lint && NODE_ENV=test ava --r babel-register test/**-test.js"
  },
  "standard": {
    "parser": "babel-eslint"
  },
  "ava": {
    "require": [
      "babel-register"
    ]
  },
  "babel": {
    "presets": [
      "es2015"
    ],
    "plugins": [
      "transform-runtime",
      "transform-async-to-generator"
    ]
  },
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "ava": "^0.17.0",
    "babel-eslint": "^7.1.1",
    "babel-register": "^6.22.0",
    "request": "^2.79.0",
    "request-promise": "^4.1.1",
    "standard": "^8.6.0",
    "test-listen": "^1.0.0"
  },
  "dependencies": {
    "babel-plugin-transform-async-to-generator": "^6.22.0",
    "babel-plugin-transform-runtime": "^6.22.0",
    "babel-preset-es2015": "^6.22.0",
    "babel-runtime": "^6.22.0",
    "gravatar": "^1.6.0",
    "http-hash": "^2.0.0",
    "micro": "^6.2.0",
    "uuid-base62": "^0.1.0"
  }
}
